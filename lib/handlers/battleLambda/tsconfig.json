{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist", "*.test.ts", "*.spec.ts"]
}
